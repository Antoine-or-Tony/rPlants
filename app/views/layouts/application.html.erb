<!DOCTYPE html>
<html>
  <head>
    <title>AIRplants</title>
    <%= favicon_link_tag 'plant.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', defer: true%>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="content-wrapper">
      <%= yield %>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Added flashes for sign-in/log-in -->
    <%= render 'shared/flashes' %>
    <%= render 'shared/footer' %>
  </body>
</html>

