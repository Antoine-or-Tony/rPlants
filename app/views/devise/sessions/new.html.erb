<div class="new-log-in">

  <div class="container pt-5 col-4">
    <div>

    <h2 class="text-white">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: {class: "label_new text-white"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label_html: {class: "label_new text-white"} %>
        <%= f.input :remember_me, label_html: {class: "label_new text-white"}, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"btn btn-success mb-3" %>
      </div>
    <% end %>

  </div>
    </div>

</div>
