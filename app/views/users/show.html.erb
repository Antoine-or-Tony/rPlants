
<div class="container">
  <div class="mt-3">
    <% if @user == current_user %>
      <h3>Welcome to your profile <%= @user.first_name %></h3>
    <% else %>
      <h3>Profile - <%= @user.first_name %> <%= @user.last_name %></h3>
    <% end %>
  </div>

  <!-- Current and upcoming bookings -->
  <div class="mt-3">
    <h4 class=>My current bookings</h4>
    <div class="row">
      <% @user.bookings.each do |booking|  %>
        <% if booking.reviews[0].nil? %> <!-- Check si il y a des reviews -->
          <div class="col-4 mb-3">
            <div class="card-trip">
              <%= cl_image_tag booking.plant.photo.key, height: 250, width: 250, crop: :fill, :class =>'image-trip'%>
              <div class="card-trip-infos">

               <!-- Div à gauche -->
                <div>
                  <h2><%= booking.plant.name %> - <%= booking.total_price%> €</h2>
                  <p>From <%= booking.start_date %></p>
                   <p>to <%= booking.end_date %></p>
                </div>

                  <!-- Bouton review -->

                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
                  pending review
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <div>
                          <h2>Add a review on your booking</h2>
                          <%= simple_form_for [booking.plant, booking, @review] do |f| %>
                            <%= f.input :rating, label_html: {class: "review_rating"}, collection: (1..5).to_a, label: "Rate your experience" %>
                            <%= f.input :comments, label_html: {class: "label_new"} %>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              <%= f.submit "Submit review", class: "btn btn-success", id: "sweet-alert-demo" %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- previous bookings -->
  <div class="mt-3">
    <h4 class=>My previous bookings</h4>
    <div class="row">
      <% @user.bookings.each do |booking|  %>
        <% if booking.reviews[0].nil? == false %> <!-- Check si il y a des reviews -->
          <div class="col-4 mb-3">
            <div class="card-trip">
              <%= cl_image_tag booking.plant.photo.key, height: 250, width: 250, crop: :fill, :class =>'image-trip'%>
              <div class="card-trip-infos">

               <!-- Div à gauche -->
                <div>
                  <h2><%= booking.plant.name %> - <%= booking.total_price%> €</h2>
                  <p>From <%= booking.start_date %></p>
                   <p>to <%= booking.end_date %></p>
                </div>

                  <!-- Affichage des notes -->
                <div>
                  <% booking.reviews[0].rating.times do %>
                    <i class="fas fa-star" style="color: orange"></i>
                  <% end %>
                  <% (5 - booking.reviews[0].rating).times do  %>
                    <i class="fas fa-star" style="color: lightgrey"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Display all current plants -->
  <div class="mt-5">

    <h4>My plants</h4>

    <div class="row">
      <% @user.plants.each do |plant| %>
        <div class="col-4">
          <div class="card-trip">
            <%= cl_image_tag plant.photo.key, height: 250, width: 250, crop: :fill, :class =>'image-trip'%>
            <div class="card-trip-infos">
              <div>
                <h2><%= link_to plant.name, plant_path(plant)%></h2>
                <p>review + review.count<i class="fas fa-star"></i></p>
              </div>
              <h2><%= link_to plant.price, plant_path(plant), class:"card-trip-pricing"%>€</h2>
            </div>
          </div>

  <!-- Display only if current_user is the user plage -->
          <% if @user == current_user %>
            <div class="m-3">
              <%= link_to "Update plant", edit_plant_path(plant), class:"btn btn-secondary" %>
              <%= link_to "Delete plant", plant_path(plant), method: :delete, class:"btn btn-danger" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

  <!-- Display only if current_user is the user plage -->
  <!-- Button to add new plant -->
  <% if @user == current_user %>
    <div class="m-3">
      <%= link_to "Add a new plant", new_plant_path, class:"btn btn-success" %>
    </div>
  <% end %>
  <br>

  <div class="mt-5">
    <!-- Display edit options only if current_user is the user plage -->
    <% if @user == current_user %>
      <h4>My profile</h4>
      <%= link_to "Edit my infos", edit_user_registration_path, class:"btn btn-secondary" %>
      <%= link_to "Edit my password", edit_user_registration_path, class:"btn btn-secondary" %>
    <% end %>
    </div>
</div>
