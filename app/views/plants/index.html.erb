<h1>Plant list</h1>

<% @plants.each do |plant| %>
  <p><%= link_to plant.name, plant_path(plant) %></p>
  <% if policy(plant).edit? %>
    <%= link_to "Update", edit_plant_path(plant) %>
    <%= link_to "Delete", plant_path(plant), method: :delete %>
  <% end %>
<% end %>

<% if policy(Plant).create? %>
  <%= link_to "Add a new plant", new_plant_path %>
<% end %>
