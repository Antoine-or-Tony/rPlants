<div class="container">
  <div class="main-container">
    <h1 class="mt-3">Our plants</h1>
    <%= render 'shared/filter' %>
    <div class="d-flex">
        <div class="cards">
          <% @plants.each do |plant| %>
            <div class="card-trip">
              <%= link_to plant_path(plant) do %>
                <%= cl_image_tag plant.photo.key, height: 250, width: 250, crop: :fill, :class =>'image-trip'%>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= plant.name %></h2>
                  <p>review + review.count<i class="fas fa-star"></i></p>
                </div>
                <h2 class ='card-trip-pricing'><strong><%= plant.price %>â‚¬</strong></h2>
              </div>
            </div>
          <% end %>
        </div>
        <div id="map"
          style="width: 50%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
