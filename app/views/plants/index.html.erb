<div class="container">
  <div class="main-container">
    <h1 class="mt-3">Our plants</h1>
    <div class="d-flex">
        <div class="cards">
          <% @plants.each do |plant| %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('<%= cl_image_path plant.photo.key, height: 300, width: 400, crop: :fill %>')">
              <p><%= link_to plant.name, plant_path(plant)%></p>
            </div>
          <% end %>
        </div>
        <div id="map"
          style="width: 50%; height: 600px";
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
