<div class="container">
  <div class="main-container">
    <h1 class="mt-3">Our plants</h1>
    <div class="d-flex">
        <div class="cards">
          <% @plants.each do |plant| %>
            <div class="card-trip">
              <%= cl_image_tag plant.photo.key, height: 250, width: 250, crop: :fill, :class =>'image-trip'%>
              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to plant.name, plant_path(plant)%></h2>
                  <p>review + review.count<i class="fas fa-star"></i></p>
                </div>
                <h2><%= link_to plant.price, plant_path(plant), class:"card-trip-pricing"%>â‚¬</h2>
              </div>
            </div>
          <% end %>
        </div>
        <div id="map"
          style="width: 50%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
