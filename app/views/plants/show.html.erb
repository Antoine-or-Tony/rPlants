<div class="container mt-3">
  <div class="row">
    <p> <%= link_to "Back to plants", plants_path, class:"btn btn-success btn-width-100" %></p>
  </div>
</div>

<div class="container">
  <h1><%= @plant.name %></h1>
    <p> <%= link_to "Consult the owner profile", user_path(@plant.user), class:"btn btn-secondary btn-width-100"%></p>
  <div class="row mt-3">
    <div class="col-6">
      <!-- <p> @plant.address </p> -->
      <p> <%=  @plant.comments %></p>

      <!-- Affichage des infos de la plante -->
      <div class="container bg-white shadow pt-3">
        <h2> Product details </h2>
        <div class="row">
          <div class="col-6">
            <p>Species</p>
          </div>
          <div class="col-6">
            <p><%= @plant.species %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <p>Size</p>
          </div>
          <div class="col-6">
            <p><%= @plant.size %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <p>Weight</p>
          </div>
          <div class="col-6">
            <p><%= @plant.indoor_outdoor %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <p>Indoor / Outdoor</p>
          </div>
          <div class="col-6">
            <p><%= @plant.indoor_outdoor %></p>
          </div>
        </div>
      </div>

    <!-- Affichage des reviews -->
    <div class="container mt-3 pt-3 pb-2 bg-white shadow">
      <h2>Reviews</h2>
      <% @reviews.each do |review| %>
        <div class="card-review">
         <div class="card-review-infos">
           <p><%= review.comments %></p>
           <p><%= "⭐️"*review.rating%></p>
         </div>
        </div>
      <% end %>
    </div>

  <!-- Choix des dates  -->
  <div class="container mt-3 mb-3 bg-white shadow pt-3">
    <h2>Choose your dates</h2>
    <div class="row mt-3">
      <div class="col-12">
        <p>
          Available from <strong><%= @plant.disponibility_start %></strong>  to <strong><%= @plant.disponibility_end %></strong>
        </p>
      </div>
    </div class="col-12">
      <div class = "mt-3 pb-3">
        <div>
          <h3>Choose your dates</h3>
          <%= simple_form_for ("http://localhost:3000/") do |f| %>
            <div>
              <%= f.input :start_date, as: :date, label_html: {class: "label_new"} %>
            </div>
            <div>
              <%= f.input :end_date, as: :date, label_html: {class: "label_new"} %>
            </div>
            <div class="text-center">
              <%= f.button :submit, "Book this plant", class: "btn-success btn-width-200" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Affichage de l'image -->
    <div class="col-6 shadow bg-white mt-3 mb-3">
      <div class="mt-3 text-center">
        <%= cl_image_tag @plant.photo.key, height: 500, width: 500, crop: :fill %>
      </div>
    </div>
  </div>
</div>

